#include <iostream>
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>


#include "Service.h"
#include "Sensors.h"
#include "Actuators.h"
#include <string.h>

using namespace std;

namespace
{
	const unsigned int SAMPLE_INTERVAL = 50000;
}

bool isRunning = true;

void sampleData(Service& s)
{
	Sensors sensors(s);
	while(isRunning)
	{
		sensors.readSensorValues();
		printf("###\n");
		usleep(SAMPLE_INTERVAL);
	}
}

int main() {
	Service s;
	s.informPlantWatered(1339);

	Sensors sensors(s);

	Actuators a;
	a.switchRelay(true);
	usleep(1000000);
	a.switchRelay(false);
	usleep(1000000);
	a.switchRelay(true);
	usleep(1000000);
	a.switchRelay(false);


	int
	while(true)
	{
		sensors.readSensorValues();
		printf("###\n");
		usleep(SAMPLE_INTERVAL);
	}

	return 0;
}

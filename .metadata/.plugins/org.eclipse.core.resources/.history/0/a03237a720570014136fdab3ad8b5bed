#include <iostream>
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>


#include "Service.h"
#include "Sensors.h"
#include "Actuators.h"
#include <string.h>
#include <time.h>

using namespace std;

namespace
{
	const unsigned int SAMPLE_INTERVAL = 500000;
}

int main() {
	Service s;
	s.informPlantWatered(1339);

	Sensors sensors(s);

	Actuators a;
	a.waterPlant(true, 10);
	usleep(1000000);
	a.waterPlant(false, 10);
	usleep(1000000);
	a.waterPlant(true, 10);
	usleep(1000000);
	a.waterPlant(false, 10);


	while(true)
	{
		time(&wateringStartTime);
		a.waterPlant(true);
		sensors.readSensorValues();
		printf("###\n");
		usleep(SAMPLE_INTERVAL);
	}

	return 0;
}

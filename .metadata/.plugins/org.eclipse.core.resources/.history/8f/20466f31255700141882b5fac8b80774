#include <iostream>
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>


#include "Service.h"
#include "Sensors.h"
#include "Actuators.h"
#include <string.h>
#include <time.h>

using namespace std;

namespace
{
	const unsigned int POLL_INTERVAL_USEC = 100000;
	const unsigned int SAMPLE_INTERVAL = 10;
	const unsigned int DEFAULT_WATERING_TIME = 3;
}

int main() {
	Service s;
	s.informPlantWatered(1339);

	Sensors sensors(s);

	Actuators a(s);

	time_t readTime;
	time_t currentTime;
	time(&readTime);

	while(true)
	{
		bool switchState = sensors.readOverrideSwitch();
		printf("override switch : %i\n", switchState);
		if(switchState)
		{
			a.waterPlant(DEFAULT_WATERING_TIME);
		}
		a.checkWateringStatus();

		time(&currentTime);
		if(difftime(readTime, currentTime) > SAMPLE_INTERVAL)
		{
			sensors.readSensorValues();
			time(&readTime);
		}

		printf("###\n");
		usleep(SAMPLE_INTERVAL);
	}

	return 0;
}

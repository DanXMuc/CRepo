#include <iostream>
#include <signal.h>
#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>


#include "Service.h"
#include "Sensors.h"
#include "Actuators.h"
#include <string.h>
#include <time.h>

using namespace std;

namespace
{
	const unsigned int SAMPLE_INTERVAL = 100000;
	const unsigned int DEFAULT_WATERING_TIME = 3;
}

int main() {
	Service s;
	s.informPlantWatered(1339);

	Sensors sensors(s);

	Actuators a(s);

	while(true)
	{
		if(sensors.readOverrideSwitch())
		{
			a.waterPlant(DEFAULT_WATERING_TIME);
		}
		a.checkWateringStatus();
		sensors.readSensorValues();
		printf("###\n");
		usleep(SAMPLE_INTERVAL);
	}

	return 0;
}

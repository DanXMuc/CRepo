#include "Actuators.h"
#include "mraa/gpio.hpp"
#include <time.h>

Actuators::Actuators()
	: Relay(new mraa::Gpio(4,true))
	, StartTime()
	, Duration(0)
	, Watering(false)
{
	Relay->dir(mraa::DIR_OUT);

}

Actuators::~Actuators() {

	delete Relay;// TODO Auto-generated destructor stub
}

void Actuators::waterPlant(int duration)
{
	Watering = true;
	time(&StartTime);
	Relay->write(1);
}

void Actuators::checkWateringStatus() const
{
	if(Watering)
	{
		time_t currentTime;
		time(&currentTime);
		if(difftime(currentTime, StartTime) > Duration)
		{
			Relay->write(0);
			Watering = false;
		}
	}
}


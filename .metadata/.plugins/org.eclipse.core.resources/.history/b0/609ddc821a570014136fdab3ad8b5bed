#include "Actuators.h"
#include "mraa.hpp"

Actuators::Actuators()
	: Relay(new mraa::Gpio(4,true))
{
	Relay->dir(mraa::DIR_OUT);

}

Actuators::~Actuators() {

	delete Relay;// TODO Auto-generated destructor stub
}

void Actuators::switchRelay(bool on) const
{
	Relay->write((on ? 1 : 0));
}

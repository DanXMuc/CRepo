#include "Actuators.h"
#include "mraa/gpio.hpp"

Actuators::Actuators()
	: Relay(new mraa::Gpio(4,true))
	, StartTime()
{
	Relay->dir(mraa::DIR_OUT);

}

Actuators::~Actuators() {

	delete Relay;// TODO Auto-generated destructor stub
}

void Actuators::waterPlant(bool on) const
{
	if()
	Relay->write((on ? 1 : 0));
}

